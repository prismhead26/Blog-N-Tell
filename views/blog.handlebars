<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
  integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
  crossorigin="anonymous"
/>

<div class="text-center text-light">
  <h2>{{Blog.title}}</h2>
  <p>Description: {{blog.body}}</p>

  <p>
    <button
      class="btn btn-primary"
      data-bs-toggle="modal"
      data-bs-target="#myModal"
    >Update Blog</button>
    <a href="/dashboard"><button class="btn btn-primary">Return to Dashboard</button></a>
    <button
      class="btn btn-primary"
      id="delete-button"
      data-id="{{blog.id}}"
    >Delete BLog</button>
  </p>
</div>

<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fs-5" id="myModalLabel">Update Blog
          Information</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form action="">
          <label for="blog-title">title: </label>
          <input
            type="text"
            id="update-blog-title"
            value="{{blog.title}}"
          /><br />
          <label for="blog-body">Description:
          </label>
          <input
            type="text"
            id="update-blog-body"
            value="{{blog.body}}"
          /><br />
        </form>
      </div>
      <div class="modal-footer">
        <button
          class="btn btn-primary"
          id="update-button"
          data-id="{{blog.id}}"
        >Submit Blog</button>
      </div>
    </div>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
  integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
  crossorigin="anonymous"
></script>

<script src="/js/blog.js"></script>