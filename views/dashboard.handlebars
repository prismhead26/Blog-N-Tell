<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<style>
  body {
    background: #353C3D
  }
</style>

<section>
    <h1 class="t text-center fw-bolder fst-italic" style="color: #ff9999">Welcome back {{name}}!</h1>
    <div class="text-center mt-5 m-5">
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">Add Blog</button>
    </div>
      {{#if blogs.length}}
        <h3 class="text-center patient-list mb-5 fw-bold" style="color: #ff9999">Current Blogs:</h3>
      {{/if}}
  {{#each blogs}}
    {{> blog-details}}
  {{/each}}
</section>


<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fs-5" id="myModalLabel">New Blog Information</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form action="">
          <label for="blog-title">Blog title:</label>
          <input type="text" class="form-control" id="new-blog-title"><br>
          <div class="form-group modal-body">
            <label for="blog-body" class="col-form-label">Body:</label>
            <textarea class="form-control" id="new-blog-body"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary" id="new-blog">Submit Blog</button>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="errorModal"
  tabindex="-1"
  aria-labelledby="errorModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="errorModalLabel">Unable to create blog.
          Please wait, your page is reloading...</h5>

        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >Close</button>

        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="/js/dashboard.js"></script>