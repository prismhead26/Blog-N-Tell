  <header class="container d-flex flex-column align-items-center">
    <h1 class="text-light">Welcome to Blog'n Tell!</h1>
    <p class="text-light">A Creative, Clever, and Effective blog page!</p>
      {{#unless logged_in}}
        <p class="mt-3 text-warning"><strong>Tip:</strong> to continue, open the login page.</p>
      {{/unless}}
  </header>

  <section class="container">
    <h1 class="text-light">All Blogs</h1>
    <div class="row justify-content-between d-flex">
      
      {{#if blogs.length}}
        {{#if logged_in}}
          {{#each blogs}}
          <h3 class="text-light col-6"><a href="" data-bs-toggle="modal" data-bs-target="#myCommentModal" data-id="{{id}}">{{title}}</a></h3>
          <p>{{body}}</p>
          <p>{{comment.description}}</p><br />
          {{/each}}
        {{else}}
          {{#each blogs}}
          <h3 class="text-light col-6">{{title}}</h3>
          <p>{{body}}</p>
          <p>{{comment.description}}</p><br />
          {{/each}}
        {{/if}}
      {{/if}}
    </div>
  </section>


<div class="modal fade" id="myCommentModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fs-5" id="myModalLabel">New Commment Information</h5>
        <button class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form action="">
          <label for="comment-description">Comment description:</label>
          <input type="text" id="new-comment-description"><br>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary" id="new-comment">Submit Comment</button>
      </div>
    </div>
  </div>
</div>

